.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{:data => {:toggle => 'collapse', :target => '.nav-collapse'}}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.brand{:href => '#'}
        Project name
        %small= $version
      .nav-collapse
        %ul.nav
          %li.active
            %a{:href => '#home'} Home
          %li
            %a{:href => '#about'} About
          %li
            %a{:href => '#contact'} Contact
        %ul.nav.pull-right
          %li
            - if current_user
              = link_to 'Logout (%s)' % current_user.email, logout_path
            - else
              = link_to 'Login', login_path
